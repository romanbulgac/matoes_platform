{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "isolatedModules": false,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    ".storybook/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
