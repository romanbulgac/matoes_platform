# API Configuration
VITE_API_BASE_URL=http://localhost:5000/
VITE_SIGNALR_URL=http://localhost:5000/

# Optional: Error tracking
# VITE_SENTRY_DSN=https://your-sentry-dsn

# Optional: Analytics  
# VITE_ANALYTICS_ID=your-analytics-id

# Security: App secret for client-side encryption (development only)
VITE_APP_SECRET=your-dev-secret-key

# Environment
NODE_ENV=development

# Development Options
# Set to 'true' to disable CSRF protection during development (NOT for production!)
VITE_DISABLE_CSRF=true

# App Configuration
VITE_APP_NAME=Mathematics Consultation Platform
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true

# Third-party Services (примеры)
# VITE_STRIPE_PUBLIC_KEY=pk_test_...
# VITE_GOOGLE_ANALYTICS_ID=G-...
# VITE_SENTRY_DSN=https://...
